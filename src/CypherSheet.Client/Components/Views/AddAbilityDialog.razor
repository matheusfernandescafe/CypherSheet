@using CypherSheet.Domain
@using MudBlazor

@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="name" Label="Nome" AutoFocus="true" />
        <MudTextField @bind-Value="cost" Label="Custo" MaxLength="3" />
        <MudSelect @bind-Value="type" Label="Tipo">
            <MudSelectItem Value="@SkillType.Might">Might</MudSelectItem>
            <MudSelectItem Value="@SkillType.Speed">Speed</MudSelectItem>
            <MudSelectItem Value="@SkillType.Intellect">Intellect</MudSelectItem>
        </MudSelect>
        <MudTextField @bind-Value="page" Label="Página" MaxLength="3" />
        <MudTextField @bind-Value="description" Label="Descrição" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Salvar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Character Character { get; set; }
    [Parameter] public Ability AbilityToEdit { get; set; }

    private string name;
    private string cost;
    private string description;
    private SkillType type = SkillType.Might;
    private string page;

    protected override void OnInitialized()
    {
        if (AbilityToEdit != null)
        {
            name = AbilityToEdit.Name;
            cost = AbilityToEdit.Cost;
            description = AbilityToEdit.Description;
            type = AbilityToEdit.Type;
            page = AbilityToEdit.Page;
        }
    }

    void Submit()
    {
        if (string.IsNullOrWhiteSpace(name))
        {
            Snackbar.Add("Nome é obrigatório", Severity.Warning);
            return;
        }
        
        if (AbilityToEdit != null)
        {
            AbilityToEdit.Name = name;
            AbilityToEdit.Cost = cost;
            AbilityToEdit.Description = description;
            AbilityToEdit.Type = type;
            AbilityToEdit.Page = page;
        }
        else
        {
            Character.Abilities.Add(new Ability { 
                Name = name, 
                Cost = cost, 
                Description = description,
                Type = type,
                Page = page
            });
        }

        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();
}
