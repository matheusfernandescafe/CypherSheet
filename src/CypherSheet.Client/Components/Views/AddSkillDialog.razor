@using CypherSheet.Domain
@using MudBlazor

@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="skillName" Label="Nome da Perícia" AutoFocus="true" />
            <MudSelect @bind-Value="skillType" Label="Tipo">
                <MudSelectItem Value="SkillType.Might">Might</MudSelectItem>
                <MudSelectItem Value="SkillType.Speed">Speed</MudSelectItem>
                <MudSelectItem Value="SkillType.Intellect">Intellect</MudSelectItem>
            </MudSelect>
            <MudSelect @bind-Value="skillLevel" Label="Nível">
                <MudSelectItem Value="SkillLevel.Inability">Inabilidade</MudSelectItem>
                <MudSelectItem Value="SkillLevel.Trained">Treinado</MudSelectItem>
                <MudSelectItem Value="SkillLevel.Specialized">Especializado</MudSelectItem>
            </MudSelect>
            <MudTextField @bind-Value="skillDescription" Label="Descrição (opcional)" Lines="3" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Salvar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Character Character { get; set; } = null!;
    [Parameter] public Skill? SkillToEdit { get; set; }

    private string skillName = "";
    private SkillLevel skillLevel = SkillLevel.Trained;
    private SkillType skillType = SkillType.Intellect;
    private string skillDescription = "";

    protected override void OnInitialized()
    {
        if (SkillToEdit != null)
        {
            skillName = SkillToEdit.Name;
            skillLevel = SkillToEdit.Level;
            skillType = SkillToEdit.Type;
            skillDescription = SkillToEdit.Description;
        }
    }

    void Submit()
    {
        if (string.IsNullOrWhiteSpace(skillName))
        {
            Snackbar.Add("Nome é obrigatório", Severity.Warning);
            return;
        }

        if (Character == null)
        {
             Snackbar.Add("Erro interno: Personagem não carregado.", Severity.Error);
             return;
        }

        if (Character.Skills == null)
        {
            Character.Skills = new List<Skill>();
        }
        
        if (SkillToEdit != null)
        {
            SkillToEdit.Name = skillName;
            SkillToEdit.Level = skillLevel;
            SkillToEdit.Type = skillType;
            SkillToEdit.Description = skillDescription;
        }
        else
        {
            Character.Skills.Add(new Skill 
            { 
                Name = skillName, 
                Level = skillLevel, 
                Type = skillType, 
                Description = skillDescription 
            });
        }
        
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();
}