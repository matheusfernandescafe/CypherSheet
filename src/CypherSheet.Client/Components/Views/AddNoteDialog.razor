@using CypherSheet.Domain
@using MudBlazor

@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="title" Label="Título" AutoFocus="true" />
            <MudSelect @bind-Value="selectedType" Label="Tipo">
                <MudSelectItem Value="@NoteType.Local">Local</MudSelectItem>
                <MudSelectItem Value="@NoteType.Personagem">Personagem</MudSelectItem>
                <MudSelectItem Value="@NoteType.Item">Item</MudSelectItem>
                <MudSelectItem Value="@NoteType.Missao">Missão</MudSelectItem>
                <MudSelectItem Value="@NoteType.Outro">Outro</MudSelectItem>
            </MudSelect>
            <MudTextField @bind-Value="content" Label="Descrição" Lines="5" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Salvar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Character Character { get; set; } = null!;
    [Parameter] public Note? NoteToEdit { get; set; }

    private string title = "";
    private string content = "";
    private NoteType selectedType = NoteType.Outro;

    protected override void OnInitialized()
    {
        if (NoteToEdit != null)
        {
            title = NoteToEdit.Title;
            content = NoteToEdit.Content;
            selectedType = NoteToEdit.Type;
        }
    }

    void Submit()
    {
        if (string.IsNullOrWhiteSpace(title))
        {
            Snackbar.Add("Título é obrigatório", Severity.Warning);
            return;
        }
        
        if (NoteToEdit != null)
        {
            NoteToEdit.Title = title;
            NoteToEdit.Content = content;
            NoteToEdit.Type = selectedType;
        }
        else
        {
            Character.Notes.Add(new Note { Title = title, Content = content, Type = selectedType });
        }
        
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();
}
